<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.citrus.skillcinema.presentation.certainmovie.CertainMovieViewModel" />

        <import type="android.view.View" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.certainmovie.CertainMovieFragment">

        <ProgressBar
            android:id="@+id/progress_bar_certain"
            android:theme="@style/BlueProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:elevation="4dp"
            android:layout_marginTop="240dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/certain_movie_back_button"
                    android:layout_width="32dp"
                    android:layout_height="36dp"
                    android:background="@drawable/button_background"
                    android:backgroundTint="@color/white"
                    android:drawableEnd="@drawable/all_movies_back_item"
                    android:layout_marginStart="26dp"
                    tools:ignore="TouchTargetSizeCheck"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/certain_cover"
                        android:layout_width="407dp"
                        android:layout_height="350dp"
                        android:layout_marginEnd="8dp"
                        tools:src="@tools:sample/avatars" />

                    <View
                        android:layout_width="407dp"
                        android:layout_height="390dp"
                        android:background="@drawable/poster_bottom_gradient"
                        app:layout_constraintBottom_toBottomOf="@id/poster"
                        app:layout_constraintEnd_toEndOf="@id/poster"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@id/poster" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/film_logo_image_view"
                        android:layout_width="276dp"
                        android:layout_height="79dp"
                        android:layout_gravity="center_horizontal"
                        tools:src="@tools:sample/backgrounds/scenic"
                        android:layout_marginTop="220dp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/information_text_view"
                        android:layout_width="233dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="300dp"
                        android:textAlignment="center"
                        android:textColor="@color/background"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="175dp">

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/favourite_btn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@color/transparent"
                            android:contentDescription="@string/favourite"
                            app:srcCompat="@drawable/ic_heart"
                            tools:ignore="TouchTargetSizeCheck"
                            />

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/bookmark_btn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@color/transparent"
                            app:srcCompat="@drawable/ic_bookmark"
                            android:contentDescription="@string/wanted_to_watch"
                            tools:ignore="TouchTargetSizeCheck"
                            />

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/eye_button"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@color/transparent"
                            app:srcCompat="@drawable/ic_slash_eye"
                            android:contentDescription="@string/watched"
                            tools:ignore="TouchTargetSizeCheck"
                            />
                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/share_btn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@color/transparent"
                            app:srcCompat="@drawable/ic_share"
                            android:contentDescription="@string/share"
                            tools:ignore="TouchTargetSizeCheck"
                            />
                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/three_points_btn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@color/transparent"
                            app:srcCompat="@drawable/ic_three_points"
                            android:contentDescription="@string/add_collection"
                            tools:ignore="TouchTargetSizeCheck"/>


                    </LinearLayout>

                </FrameLayout>



                <TextView
                    android:id="@+id/short_description_text_view"
                    style="@style/SkillCinemaText.BoldText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="26dp"
                    android:maxLines="3"
                    android:textAlignment="textStart" />

                <TextView
                    android:id="@+id/description_text_view"
                    style="@style/SkillCinemaText.NormalText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="26dp"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:textAlignment="textStart"
                    tools:ignore="TouchTargetSizeCheck"/>

                <LinearLayout
                    android:id="@+id/series_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical"
                    android:paddingBottom="26dp"
                    tools:ignore="ScrollViewSize">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        tools:ignore="ScrollViewSize">

                        <TextView
                            android:id="@+id/seasons_series_text_view"
                            style="@style/SkillCinemaText.BoldText"
                            android:layout_width="319dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2" />

                        <TextView
                            android:id="@+id/seasons_series_all_text_view"
                            style="@style/SkillCinemaText.Blue"
                            android:layout_width="28dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/seasons_series_count_text_view"
                        style="@style/SkillCinemaText.GreyText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal"
                    android:paddingBottom="26dp"
                    tools:ignore="RtlSymmetry">

                    <TextView
                        android:id="@+id/actors_list_text_view"
                        style="@style/SkillCinemaText.BoldText"
                        android:layout_width="319dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" />

                    <TextView
                        android:id="@+id/actors_count_text_view"
                        style="@style/SkillCinemaText.BoldText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/app_blue" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/actorNewRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="26dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="4"
                    tools:listitem="@layout/actor_item" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal"
                    android:paddingBottom="26dp">

                    <TextView
                        android:id="@+id/film_stuff_text_view"
                        style="@style/SkillCinemaText.BoldText"
                        android:layout_width="319dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" />

                    <TextView
                        android:id="@+id/stuff_count__text_view"
                        style="@style/SkillCinemaText.BoldText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/app_blue" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/stuff_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="26dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2"
                    tools:listitem="@layout/actor_item" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal"
                    android:paddingBottom="26dp">

                    <TextView
                        android:id="@+id/gallery_text_view"
                        style="@style/SkillCinemaText.BoldText"
                        android:layout_width="319dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" />

                    <TextView
                        android:id="@+id/gallery_all_text_view"
                        style="@style/SkillCinemaText.BoldText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/app_blue" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/gallery_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="26dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:ignore="RtlSymmetry"
                    tools:listitem="@layout/gallery_item" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal"
                    android:paddingBottom="26dp">

                    <TextView
                        android:id="@+id/similar_movies_text_view"
                        style="@style/SkillCinemaText.BoldText"
                        android:layout_width="319dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" />

                    <TextView
                        android:id="@+id/similar_count_text_view"
                        style="@style/SkillCinemaText.BoldText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/app_blue" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/similar_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/movie_item"
                    android:layout_marginBottom="40dp"/>


            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>