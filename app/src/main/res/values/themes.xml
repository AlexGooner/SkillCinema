<resources>
    <style name="Theme.SkillCinema" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/grey_text</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SkillCinema.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SkillCinema.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SkillCinema.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="fontFamily">@font/graphik_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="background">@color/transparent</item>
    </style>

    <style name="BlueProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/app_blue</item>
    </style>



    <style name="Theme.SkillCinema.EditText">
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorAccent">@color/app_blue</item>
    </style>

    <style name="SpinnerStyle">
        <item name="colorAccent">@color/app_blue</item>
        <item name="colorControlNormal">@color/grey_text</item>
    </style>

    <style name="Widget.App.Slider" parent="Widget.Material3.Slider">
        <item name="labelStyle">@style/Widget.App.Tooltip</item>
    </style>

    <style name="Widget.App.Tooltip" parent="Widget.Material3.Tooltip">
        <item name="android:textAppearance">@style/TextAppearance.App.Tooltip</item>
        <item name="backgroundTint">@color/app_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.App.Tooltip" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/graphik_medium</item>
        <item name="android:fontFamily">@font/graphik_medium</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_selector</item>
        <item name="chipStrokeColor">@color/black</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textAlignment">center</item>
    </style>

        <style name="LeftChipShape" parent="">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSize">16dp</item>
            <item name="cornerSizeTopRight">0dp</item>
            <item name="cornerSizeBottomRight">0dp</item>
        </style>

    <style name="RightChipShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="BothChipShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="RoundedShape" parent ="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>



</resources>